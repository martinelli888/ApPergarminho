<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pergaminhos.appergarminho.barrona">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppThemeNAB"
        app:popupTheme="@style/AppThemeNAB" />

    <TextView
        android:id="@+id/tituloBarrona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="barrona ok funcionou caraiio"
        android:textColor="@color/pewter"
        android:textSize="@dimen/altTextTitulo"
        android:textStyle="bold" />

    <include
        android:id="@+id/inc_tb_bottom"
        layout="@layout/tb_main_bottom">

    </include>
</RelativeLayout>